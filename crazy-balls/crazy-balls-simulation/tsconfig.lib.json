{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../libs/vite-transformers/tsconfig.lib.json"
    },
    {
      "path": "../../libs/math/tsconfig.lib.json"
    },
    {
      "path": "../../libs/di/tsconfig.lib.json"
    },
    {
      "path": "../../libs/misc/tsconfig.lib.json"
    },
    {
      "path": "../../libs/types/tsconfig.lib.json"
    },
    {
      "path": "../../libs/physics2d/tsconfig.lib.json"
    }
  ],
  "exclude": [
    "vite.config.ts",
    "vite.config.mts",
    "vitest.config.ts",
    "vitest.config.mts",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx"
  ]
}
