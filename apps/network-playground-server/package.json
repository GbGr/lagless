{
  "name": "@lagless/network-playground-server",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/network-playground-server/dist",
          "format": [
            "cjs"
          ],
          "bundle": false,
          "main": "apps/network-playground-server/src/main.ts",
          "tsConfig": "apps/network-playground-server/tsconfig.app.json",
          "assets": [
            "apps/network-playground-server/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".js": ".js"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/apps/network-playground-server/dist/package.json",
          "{workspaceRoot}/apps/network-playground-server/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/apps/network-playground-server/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@lagless/network-playground-server:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@lagless/network-playground-server:build:development"
          },
          "production": {
            "buildTarget": "@lagless/network-playground-server:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "express": "^4.21.2",
    "colyseus": "^0.16.5",
    "@lagless/core": "workspace:*",
    "@lagless/misc": "workspace:*",
    "@lagless/binary": "workspace:*",
    "@lagless/net-wire": "workspace:*",
    "@lagless/colyseus": "workspace:*"
  }
}
