{
  "name": "@lagless/circle-race-backend",
  "version": "0.0.1",
  "private": true,
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ],
          "cwd": "circle-race/circle-race-backend"
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "prune-lockfile": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "executor": "@nx/js:prune-lockfile",
        "outputs": [
          "{workspaceRoot}/circle-race/circle-race-backend/dist/package.json",
          "{workspaceRoot}/circle-race/circle-race-backend/dist/pnpm-lock.yaml"
        ],
        "options": {
          "buildTarget": "build"
        }
      },
      "copy-workspace-modules": {
        "dependsOn": [
          "build"
        ],
        "cache": true,
        "outputs": [
          "{workspaceRoot}/circle-race/circle-race-backend/dist/workspace_modules"
        ],
        "executor": "@nx/js:copy-workspace-modules",
        "options": {
          "buildTarget": "build"
        }
      },
      "prune": {
        "dependsOn": [
          "prune-lockfile",
          "copy-workspace-modules"
        ],
        "executor": "nx:noop"
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@lagless/circle-race-backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@lagless/circle-race-backend:build:development"
          },
          "production": {
            "buildTarget": "@lagless/circle-race-backend:build:production"
          }
        }
      }
    }
  },
  "dependencies": {
    "@lagless/game": "workspace:*",
    "@lagless/schemas": "workspace:*",
    "@lagless/player": "workspace:*",
    "@colyseus/monitor": "^0.16.7",
    "@colyseus/playground": "^0.16.4",
    "@colyseus/schema": "^3.0.68",
    "@colyseus/tools": "^0.16.14",
    "@lagless/binary": "workspace:*",
    "@lagless/circle-race-simulation": "workspace:*",
    "@lagless/colyseus-rooms": "workspace:*",
    "@lagless/core": "workspace:*",
    "@lagless/misc": "workspace:*",
    "@lagless/net-wire": "workspace:*",
    "colyseus": "^0.16.5",
    "jsonwebtoken": "^9.0.2",
    "rxjs": "^7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "webpack": "^5.102.1",
    "@nestjs/testing": "^11.0.0",
    "webpack-node-externals": "^3.0.0"
  }
}
