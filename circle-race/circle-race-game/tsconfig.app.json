{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["dom"],
    "types": ["node", "@nx/react/typings/cssmodule.d.ts", "@nx/react/typings/image.d.ts", "vite/client"],
    "rootDir": "src"
  },
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.js",
    "src/**/*.test.js",
    "src/**/*.spec.jsx",
    "src/**/*.test.jsx",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"],
  "references": [
    {
      "path": "../../libs/relay-input-provider/tsconfig.lib.json"
    },
    {
      "path": "../circle-race-simulation/tsconfig.lib.json"
    },
    {
      "path": "../../libs/pixi-react/tsconfig.lib.json"
    },
    {
      "path": "../../libs/animate/tsconfig.lib.json"
    },
    {
      "path": "../../libs/core/tsconfig.lib.json"
    },
    {
      "path": "../../libs/math/tsconfig.lib.json"
    },
    {
      "path": "../../libs/misc/tsconfig.lib.json"
    }
  ]
}
